{% extends '../templates/base.twig' %}

{% set PID = '00' %}

{% set PAGE = '' %}
{% for data in pages %}
    {% if data.id == PID %}
        {% set PAGE = data %}
    {% endif %}
{% endfor %}

{% block main %}
    <main>
        <ul class="c-nav-list">
            {% for item in pages %}
                {% if loop.index > 1 %}
                    <li>
                        <a href="{{ item.href }}">
                            {% if item.list %}
                                {% include '../_misc/_postcard-list.twig' with { data: item } %}
                            {% else %}
                                <img src="{{ App[0].pImg }}/{{ item.id }}.jpg" width="2156" height="3026" alt="{{ item.title }}">
                            {% endif %}
                        </a>
                    </li>
                {% endif %}
            {% endfor %}

            <li>
                <a href="mailto:acbka79005@gmail.com?subject=feedback">if you want to be okay kiss my tits every day</a>
            </li>
        </ul>
    </main>
{% endblock %}
